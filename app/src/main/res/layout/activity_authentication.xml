<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Authentication">


    <EditText
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:id="@+id/et1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="Enter Email"
            android:layout_marginTop="52dp"/>
    <EditText
            android:layout_width="291dp"
            android:layout_height="52dp"
            android:hint="Enter Password"
            android:id="@+id/et2" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp" android:layout_marginTop="66dp"
            app:layout_constraintTop_toBottomOf="@+id/et1"/>
    <Button
            android:text="Signup"
            android:layout_width="248dp"
            android:layout_height="wrap_content"

            android:id="@+id/signin" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="66dp"
            android:layout_marginStart="66dp" android:layout_marginTop="46dp"
            app:layout_constraintTop_toBottomOf="@+id/et2"/>
    <Button
            android:text="SignUp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/signUp" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="66dp"
            android:layout_marginStart="66dp" android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/signin"/>
</android.support.constraint.ConstraintLayout>